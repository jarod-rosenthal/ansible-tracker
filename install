#!/bin/bash

echo "Setting up Sky Hub Installer..."

apt-get -qq update 
apt-get install -qq -y git ansible

if [ ! -d ansible-tracker ]; then
	git clone -q https://gitlab.com/skyhuborg/ansible-tracker.git
else
	cd ansible-tracker
	git pull -q
	cd ..	
fi

cd ansible-tracker

ansible-playbook jetson.yaml
